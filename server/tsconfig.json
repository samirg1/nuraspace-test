{
    "compilerOptions": {
        "target": "ES2020",
        "module": "es2020",
        "moduleResolution": "Node",
        "lib": ["ES2020"],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": ["src", "../types.d.ts"],
    "exclude": ["node_modules", "dist"]
}
